.guides
  h1
    font-family Aureum, serif
    display inline-block
    position relative
    margin-bottom 0
  ul
    li
      margin 0
      width max-content
      &:hover
        h1
          text-decoration underline
        img
          transform rotate(3deg)

      a
        position relative
        color var(--primary)
        background none
        padding initial
        border-radius 0
        box-shadow none
        &:hover
          box-shadow none

      img
        max-width 100px
        border-radius 5px
        position absolute
        right -115px
        top -40px
        transition all 0.1s

      p
        margin-bottom 0

  .badge
    &.life
      background-color #b9a8ff
    &.planning
      background-color #ffbfcb

